<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >
     
    <ImageView
        android:id="@+id/imgMemberImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/txtMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:text="Member Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/member_details_text_color"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="40dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/member_details_text_color"
            android:text="Houston,TX" />

        <TextView
            android:id="@+id/txtInstruactionLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:textColor="#000"
            android:textSize="9sp"
            android:text="Type the amount to charge" />
        
        <TextView
            android:id="@+id/txtInstruactionLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="125dp"
            android:textColor="#000"
            android:textSize="9sp"
            android:text="this person, with no commas" />
        
        <TextView
            android:id="@+id/txtInstruactionLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:textColor="#000"
            android:textSize="9sp"
            android:text="and no dollar sign" />
        
        <Spinner
            android:id="@+id/cmbAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="60dp" />
        
        <TextView
            android:id="@+id/textHowMuch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="74dp"
            android:textStyle="bold"
            android:textColor="@color/member_details_text_brinjal"
            android:text="How Much?" />
        
        <TextView
            android:id="@+id/txtDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="120dp"
            android:textStyle="bold"
            android:textColor="@color/member_details_text_brinjal"
            android:text="$" />
        
        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="30dp"
            android:textSize="13sp" >

            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/txtFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:textColor="@color/member_details_text_brinjal"
            android:text="For" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="145dp"
            android:text="RadioButton" />

        <EditText
            android:id="@+id/edtReason"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"
            android:text="goods and services"
            android:textSize="13sp" />
        
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="180dp" />
        
        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="194dp"
            android:textColor="@color/member_details_text_brinjal"
            android:text="cash, credit, or gift" />

        <Button
            android:id="@+id/bntSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="220dp"
            android:textColor="@color/member_details_text_brinjal"
            android:text="Submit" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/rlogo" />

 </RelativeLayout>
