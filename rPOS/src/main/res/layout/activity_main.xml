<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true">

    <SurfaceView android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <org.rcredits.zxing.client.android.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/undo_frame">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo Last\u000ATransaction"
                android:id="@+id/undo_last"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:width="150dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/balance_frame">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer\u000ABalance"
                android:id="@+id/show_balance"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:width="150dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You are NOT SIGNED IN"
            android:id="@+id/signed_as"
            android:textSize="18dp"
            android:ellipsize="middle"
            android:lines="1"
            android:singleLine="true"
            android:clickable="false"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ready to scan..."
            android:id="@+id/textView2"
            android:clickable="false"
            android:textColor="#000000"/>
    </LinearLayout>

</FrameLayout>