<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"
android:paddingBottom="0dp"
tools:context=".Tx"
    android:onClick="onGoodsClick">

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$0.00"
                android:id="@+id/amount"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:singleLine="true"
                android:autoText="false" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="1"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="2"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="3"
                android:typeface="normal" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="4"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:contentDescription="5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button6"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="6"
                android:typeface="normal" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button7"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="7"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button8"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="8"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button9"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="9"
                android:typeface="normal" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="c"
                android:id="@+id/button10"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="c"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button11"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#758eff"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="0"
                android:typeface="normal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="\u25C0"
                android:id="@+id/button12"
                android:layout_weight="33"
                android:clickable="true"
                android:enabled="true"
                android:textSize="60dp"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onCalcClick"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="b"
                android:typeface="normal" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cash"
                android:layout_gravity="left"
                android:layout_weight="5"
                android:background="@drawable/dollar_coin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goods"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:layout_weight="80"
                android:onClick="onGoodsClick" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_description"
                android:layout_gravity="right"
                android:layout_weight="5"
                android:background="@drawable/change_icon"
                android:onClick="onChangeDescriptionClick" />
        </LinearLayout>
    </TableRow>

</TableLayout>

</RelativeLayout>

