<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pricing_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rlogo_back" >

    <ImageView
        android:id="@+id/customer_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/customer_pic"
        android:paddingTop="2dp"
        android:src="@drawable/anon"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/customer_pic"
        android:focusable="false"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="@string/customer_name"
        android:textColor="@color/green"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/customer_pic"
        android:layout_below="@id/customer_pic"
        android:focusable="false"
        android:paddingTop="5dp"
        android:text="@string/enter_price"
        android:textColor="@color/green"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/price_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/customer_pic"
        android:layout_below="@id/price"
        android:digits=".0123456789"
        android:inputType="numberDecimal"
        android:textColor="@color/green"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text"
        android:layout_toRightOf="@id/customer_pic"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".34"
            android:text="@string/cancel"
            android:textColor="@color/green" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <Button
            android:id="@+id/enter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".34"
            android:text="@string/submit"
            android:textColor="@color/green" />
    </LinearLayout>

</RelativeLayout>